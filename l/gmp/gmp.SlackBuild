# Modified 2011 by Eric Hameleers <alien at slackware.com> for ARM port.

VERSION=${VERSION:-$(echo gmp-*.tar.xz | rev | cut -f 3- -d . | cut -f 1 -d - | rev)}
BUILD=${BUILD:-1}

# Automatically determine the architecture we're building on:
MARCH=$( uname -m )
if [ -z "$ARCH" ]; then
  case "$MARCH" in
    i?86)    export ARCH=i486 ;;
    armv7hl) export ARCH=$MARCH ;;
    arm*)    export ARCH=arm ;;
    # Unless $ARCH is already set, use uname -m for all other archs:
    *)       export ARCH=$MARCH ;;
  esac
fi

NUMJOBS=${NUMJOBS:-" -j7 "}

CWD=$(pwd)
TMP=${TMP:-/tmp}
PKG=/$TMP/package-gmp
rm -rf $PKG
mkdir -p $TMP $PKG/${PREFIX}

case "$ARCH" in
    arm*) BUILD_TRIPLET=$ARCH-slackware-linux-gnueabi ;;
    *)    BUILD_TRIPLET=$ARCH-slackware-linux ;;
esac

cd $TMP
rm -rf gmp-$VERSION
tar xvf $CWD/gmp-$VERSION.tar.xz || exit 1
cd gmp-$VERSION
chown -R root:root .
find . \
  \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
  -exec chmod 755 {} \; -o \
  \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
  -exec chmod 644 {} \;

CFLAGS="$SLKCFLAGS" \
./configure \
  --prefix=/${PREFIX} \
  --libdir=/${PREFIX}/lib${LIBDIRSUFFIX} \
  --infodir=/${PREFIX}/info \
  --with-gnu-ld \
  --enable-cxx \
  --enable-static=no \
  --enable-shared=yes \
  --host=${HOST_TRIPLET} \
  --build=$BUILD_TRIPLET

make $NUMJOBS || make || exit 1
make install DESTDIR=$PKG || exit 1

rm $PKG/${PREFIX}/info/dir
gzip -9 $PKG/${PREFIX}/info/*

find $PKG | xargs file | egrep -e "executable|shared object" \
  | grep ${HOST_EXE_FORMAT} | cut -f 1 -d : \
  | xargs ${HOST_STRIP} --strip-unneeded 2> /dev/null

mkdir -p $PKG/${PREFIX}/doc/gmp-$VERSION
cp -a \
  AUTHORS COPYING* NEWS README \
  $PKG/${PREFIX}/doc/gmp-$VERSION

# If there's a ChangeLog, installing at least part of the recent history
# is useful, but don't let it get totally out of control:
if [ -r ChangeLog ]; then
  DOCSDIR=$(echo $PKG/${PREFIX}/doc/*-$VERSION)
  cat ChangeLog | head -n 1000 > $DOCSDIR/ChangeLog
  touch -r ChangeLog $DOCSDIR/ChangeLog
fi

cat ${CWD}/gmp.yypkg.script | sed \
  -e "s/%{PKG}/gmp/" \
  -e "s/%{HST}/${HOST_TRIPLET}/" \
  -e "s/%{TGT}//" \
  -e "s/%{VER}/${VERSION}/" \
  -e "s/%{BUILD}/${BUILD}/" \
  -e "s/%{DESCR}/${DESCR:-"No description"}/" \
  | yypkg --makepkg --output ${YYOUTPUT} --script - --directory "${PKG}/${PREFIX}"

