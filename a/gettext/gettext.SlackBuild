VERSION=0.18.3.1
BUILD=${BUILD:-2}

NUMJOBS=${NUMJOBS:-" -j6 "}

# Automatically determine the architecture we're building on:
if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) export ARCH=i486 ;;
    arm*) export ARCH=arm ;;
    # Unless $ARCH is already set, use uname -m for all other archs:
       *) export ARCH=$( uname -m ) ;;
  esac
fi

DESCR=${DESCR:-No description}

CWD=$(pwd)
TMP=${TMP:-/tmp}
PKG=$TMP/package-gettext

rm -rf $PKG
mkdir -p $TMP $PKG
cd $TMP
rm -rf gettext-$VERSION
tar xvf $CWD/gettext-$VERSION.tar.gz || exit 1
cd gettext-$VERSION
chown -R root:root .
find . \
  \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
  -exec chmod 755 {} \; -o \
  \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
  -exec chmod 644 {} \;

cd gettext-runtime
CFLAGS="-O2" \
CXXFLAGS="-O2" \
./configure \
  --prefix=/${PREFIX} \
  --libdir=/${PREFIX}/lib${LIBDIRSUFFIX} \
  --infodir=/${PREFIX}/info \
  --mandir=/${PREFIX}/man \
  --docdir=/${PREFIX}/doc/gettext-$VERSION \
  --disable-static \
  --host=${HOST_TRIPLET} \
  --build=$ARCH-slackware-linux

make $NUMJOBS || make || exit 1
make install DESTDIR=$PKG

( cd $PKG
  find . | xargs file | egrep "executable|shared object" | grep ${HOST_EXE_FORMAT} | cut -f 1 -d : | xargs ${HOST_STRIP} --strip-unneeded 2> /dev/null
)

rm -f $PKG/${PREFIX}/info/dir
gzip -9 $PKG/${PREFIX}/info/*
gzip -9 $PKG/${PREFIX}/man/man?/*

( cd $PKG/${PREFIX}/doc/gettext-$VERSION
  if [ -r $PKG/${PREFIX}/share/gettext/ABOUT-NLS ]; then
    rm -f ABOUT-NLS
    ln -sf /${PREFIX}/share/gettext/ABOUT-NLS .
  fi
)

cp -a \
  AUTHORS BUGS intl/COPYING* INSTALL NEWS README* \
  $PKG/${PREFIX}/doc/gettext-$VERSION

cat ${CWD}/gettext.yypkg.script | sed \
  -e "s/%{PKG}/gettext/" \
  -e "s/%{HST}/${HOST_TRIPLET}/" \
  -e "s/%{TGT}//" \
  -e "s/%{VER}/${VERSION}/" \
  -e "s/%{BUILD}/${BUILD}/" \
  -e "s/%{DESCR}/${DESCR:-"No description"}/" \
  | yypkg --makepkg --output ${YYOUTPUT} --script - --directory "${PKG}/${PREFIX}"

